{
  "openapi": "3.0.1",
  "info": {
    "title": "TestTask.MaternityHospital API",
    "description": "An ASP.NET Core Web API for Test Task",
    "version": "v1"
  },
  "paths": {
    "/api/patient": {
      "post": {
        "tags": [
          "Patient"
        ],
        "summary": "Создание пациента",
        "parameters": [
          {
            "name": "Name.Use",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Name.Family",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Name.Given",
            "in": "query",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          {
            "name": "Gender",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "BirthDate",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "Active",
            "in": "query",
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/patients": {
      "post": {
        "tags": [
          "Patient"
        ],
        "summary": "Создание коллекции пациентов (эндпоинт для консольного приложения \"TestTask.MaternityHospital.PatientUploaderConsoleApp\"",
        "requestBody": {
          "description": "",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/PatientIncContract"
                }
              }
            },
            "text/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/PatientIncContract"
                }
              }
            },
            "application/*+json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/PatientIncContract"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/patient/{id}": {
      "get": {
        "tags": [
          "Patient"
        ],
        "summary": "Поиск пациента по уникальному ключу",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      },
      "put": {
        "tags": [
          "Patient"
        ],
        "summary": "Метод обновления сущности пациента",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PatientIncContract"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PatientIncContract"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PatientIncContract"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      },
      "delete": {
        "tags": [
          "Patient"
        ],
        "summary": "Удалить пациента по уникальному ключу",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/patients/searchByBirthDate": {
      "get": {
        "tags": [
          "Patient"
        ],
        "summary": "Поиск пациентов по диапазону дат рождения. Отсутствие фильтров - вывод всех пациентов.",
        "parameters": [
          {
            "name": "birthdate",
            "in": "query",
            "description": "",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PatientIncContract": {
        "type": "object",
        "properties": {
          "name": {
            "$ref": "#/components/schemas/PatientNameIncContract"
          },
          "gender": {
            "type": "string",
            "nullable": true
          },
          "birthDate": {
            "type": "string",
            "format": "date-time"
          },
          "active": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "PatientNameIncContract": {
        "type": "object",
        "properties": {
          "use": {
            "type": "string",
            "nullable": true
          },
          "family": {
            "type": "string",
            "nullable": true
          },
          "given": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}